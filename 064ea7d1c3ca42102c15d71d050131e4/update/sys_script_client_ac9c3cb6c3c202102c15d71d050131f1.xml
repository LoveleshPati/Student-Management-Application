    <sys_script_client action="INSERT_OR_UPDATE">
        <active>false</active>
        <applies_extended>false</applies_extended>
        <condition/>
        <description>Restrict the Phone Number to allow only [0-9] or plus sign. (Example: +919876543210 or +921234567890 or +13901233456)</description>
        <field/>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>Phone.NoValidation</name>
        <order/>
        <script><![CDATA[function onSubmit() {
    //Type appropriate comment here, and begin script below

    var phoneNumber = g_form.getValue('phone_number');
    var regexPattern = /^[0-9+]+$/;

    if (!regexPattern.test(phoneNumber)) {
        g_form.addErrorMessage("Phone Number should contain only digits (0-9) or plus sign (+).");
        g_form.clearValue('phone_number');
        return false;
    }

}]]></script>
