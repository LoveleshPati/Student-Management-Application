        <name>AutoPopulate Total Absence Day start</name>
        <order/>
        <published_ref/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading || newValue == '') {
        return;
    }

   var start=new Date(g_form.getValue("leave_start_date"));
   var end=new Date(g_form.getValue("leave_end_date"));
   var today=new Date();

   if(start>today ) {
	
	var dayDiff=(end-start)/(1000*60*60*24);
    g_form.setValue("total_absence_day",dayDiff);
	}else{
	g_form.clearValue("leave_start_date");
	g_form.showFieldMsg("leave_start_date","You cannot select a past date","error");
   }

   
}]]></script>
